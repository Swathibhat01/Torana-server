<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>


	<bean name="snmpStatusJobStatusJob" class="org.springframework.scheduling.quartz.JobDetailBean">
		<property name="jobClass" value="com.torana.quartz.jobs.SnmpCallsJobs" />
		<property name="jobDataAsMap">
			<map>
				<entry key="ipAddress" value="192.168.100.4" />
				<entry key="snmpPort" value="161" />
				<entry key="snmpCommunity" value="public" />
				<entry key="snmpVersion" value="2" />
				<entry key="name" value="Quisk Switch" />
			</map>
		</property>
	</bean>


	<bean id="cronSnmpStatusJob" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail" ref="snmpStatusJobStatusJob" />
		<property name="cronExpression" value="0/30 0 * ? * MON-SUN" />
	</bean>

	<bean id="scheduler"
		class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<!--Get order status response from 3rd party -->
				<ref bean="cronSnmpStatusJob" />

			</list>
		</property>
	</bean>

</beans>
